{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Sync to WebDAV",
            "type": "shell",
            "command": "rclone sync \"${workspaceFolder}\" \"Sync:/Sync/${workspaceFolderBasename}\" --verbose --exclude-from \"${workspaceFolder}/.gitignore\"",
            "problemMatcher": [],
            "presentation": {
                "panel": "new",
                "close": true
            }
        },
        {
            "label": "Sync from WebDAV",
            "type": "shell",
            "command": "rclone sync Sync:/Sync/${workspaceFolderBasename} ${workspaceFolder} --verbose --exclude-from ${workspaceFolder}/.gitignore",
            "runOptions": {
                "runOn": "default"
            },
            "problemMatcher": [],
            "presentation": {
                "panel": "new",
                "close": true
            }
        }
    ]
}